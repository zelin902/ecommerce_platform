<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ecommerce.mapper.ProductDetailMapper">

    <insert id="insertBatch">
        INSERT INTO product_detail(product_id, field_name, field_value)
        VALUES
        <foreach collection="list" item="d" separator=",">
            (#{d.productId}, #{d.fieldName}, #{d.fieldValue})
        </foreach>
    </insert>

</mapper>